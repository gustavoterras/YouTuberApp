<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fourall.marketplace.donna.ui.fragment.HomeFragment">

    <data>

        <import type="br.com.infoterras.youtuberapp.viewModel.ContentViewModel" />

        <variable
            name="viewModel"
            type="ContentViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:configuration="@{viewModel.recyclerConfiguration}"/>

    </android.support.design.widget.CoordinatorLayout>

</layout>